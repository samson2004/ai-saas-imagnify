{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(root)/layout.jsx",
    "app/(auth)/layout.jsx",
    "app/(root)/page.jsx"
, "middleware.ts", "app/layout.tsx", "app/(root)/transformation/add/[type]/page.jsx", "lib/actions/transaction.actions.js"  ],
  "exclude": [
    "node_modules"
  ]
}
